---
import Homer from './Homer.astro'
---
<div class="ad">
    <div class="text-box">
        <h1 id="textOne">INTERNET KING !</h1>
        <h1 id="textTwo">FAST !</h1>
        <h1 id="textThree">CHEAP !</h1>
    </div>
    <Homer height={90}/>
</div>

<style>

    .ad {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
    }

    .text-box {
        background-color: black;
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 5px;
    }

    h1 {
        text-align: center;
        color: white;
        flex-grow: 1;
    }

    #textOne {
        animation: textOne 6s ease infinite;
        
        
    }

    #textTwo {
        animation: textTwo 6s ease infinite;
        position: absolute;
        top: 10;
        
    }

    #textThree {
        animation: textThree 6s ease infinite;
        position: absolute;
        top: 10;
    }
    @keyframes textOne {
        0% {
            opacity: 1;
        }
        25% {
            opacity: 1;
        }
        29% {
            opacity: 0;
        }
        95% {
            opacity: 0;
        }
        100% {
            opacity: 1;
        }
        
    }
    @keyframes textTwo {
        0% {
            opacity: 0;
        }
        29% {
            opacity: 0;
        }
        33% {
            opacity: 1;
        }
        58% {
            opacity: 1;
        }
        62% {
            opacity: 0;
        }
        100% {
            opacity: 0;
        }
    }
    @keyframes textThree {
        0% {
            opacity: 0;
        }
        62% {
            opacity: 0;
        }
        66% {
            opacity: 1;
        }
        91% {
            opacity: 1;
        }
        95% {
            opacity: 0;
        }
        100% {
            opacity: 0;
        }
    }

</style>
