---
import type { HTMLAttributes } from 'astro/types';

type Props = {
    onclick?: () => void;
    active?: boolean;
} & HTMLAttributes<'button'>;

const { onclick, active=false, class: className, ...props } = Astro.props;


---


    <button class:list={[className, { active: active }, 'winCl-btn']}"winCl-btn" value="Button" >
        <slot />
    </button>

<style>
    .winCl-wrap {
    border: 1px solid #000;
    display: inline;
    margin-right: 10px;
    padding-top: 1px;
    padding-bottom: 3px;
    background: #c6c6c6;
    }

    .winCl-btn {
    border-left: 3px solid #fff;
    border-top: 3px solid #fff;
    border-right: 3px solid #848484;
    border-bottom: 3px solid #848484;
    
    background: #c6c6c6;
    padding: 3px 6px 3px 6px;
    }

    .winCl-btn:hover,
    .winCl-btn:focus {
    outline: 0;
    }

    .winCl-btn:active {
    border-right: 1px solid #fff;
    border-bottom: 1px solid #fff;
    border-left: 1px solid #848484;
    border-top: 1px solid #848484;
    }

    button.active {
    border-right: 1px solid #fff;
    border-bottom: 1px solid #fff;
    border-left: 1px solid #848484;
    border-top: 1px solid #848484;
    }
</style>